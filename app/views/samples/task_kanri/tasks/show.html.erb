<h2>照会画面</h2>
<div class="waku">
  <table class="table table-bordered" style="table-layout: fixed;">
    <tbody>
      <tr>
        <th style="width:20%;">タスク</th>
        <td style="width:80%;"><%= @task.name %></td>
      </tr>
      <tr>
        <th>詳細</th>
        <td><%= @task.shosai %></td>
      </tr>
      <tr>
        <th>期限</th>
        <td><%= kigen_format(@task.kigen) %></td>
      </tr>
    <tbody>
  </table>
  <div class="row well" style="margin:20px 0 0 0">
    <div class="col-sm-12">
      <%= link_to "戻る", samples_task_kanri_tasks_path, class:"btn btn-default", style:"width:150px;display:block;margin:auto" %>
    </div>
  </div>
</div>