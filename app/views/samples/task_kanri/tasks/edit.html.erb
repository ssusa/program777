<h2>編集画面</h2>
<div style="padding:20px;margin-bottom:20px;border-radius:4px;border:2px solid #ddd">
  <%= form_for @task do |f| %>
      <%= render "form", f: f %>
      <div class="row well" style="margin:20px 0 0 0">
        <div class="col-sm-12">
          <%= link_to "キャンセル", samples_task_kanri_tasks_path, class:"btn btn-lg btn-default", style:"float:left" %>
          <%= f.submit "編集する", class:"btn btn-lg btn-primary", style:"float:right" %>
        </div>
      </div>
  <% end %>
</div>